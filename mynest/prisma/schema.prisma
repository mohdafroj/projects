generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model users {
  id       Int        @id @default(autoincrement())
  name     String
  email    String     @unique
  password String
  mobile   String?
  profiles profiles[]
}

model profiles {
  id        Int      @id @default(autoincrement())
  title     String
  picture   String?
  content   String?
  published Boolean? @default(false)
  author    users?   @relation(fields: [author_id], references: [id])
  author_id Int?
}
